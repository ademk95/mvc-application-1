@using genelTekrar01.Models
@model IEnumerable<UrunModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="row">
    <div class="col-md-3">

        <h2 class="alert alert-dark">Kategoriler</h2>
        <hr />
        <div class="row">
            <div class="col-md-12">
                @Html.Action("KategoriDinamik", "Home")
            </div>
        </div>

        <hr />
        <div class="well">
            <h4>Urun Arama</h4>
            <hr />
            @Html.Action("SearchHome", "Home")

        </div>
    </div>
    <div class="col-md-9">
        <h2 class="alert alert-danger">Uygulama Anasayfa</h2>
        <hr />

        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="https://via.placeholder.com/850x280" alt="Los Angeles">
                </div>

                <div class="item">
                    <img src="https://via.placeholder.com/850x280" alt="Chicago">
                </div>

                <div class="item">
                    <img src="https://via.placeholder.com/850x280" alt="New York">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </div>

    <div class="col-md-9">
        @Html.Action("KategoriList", "Home")

    </div>
    <div class="col-md-3">

    </div>
    
    @Html.Action("UrunAllSlider","Home")
</div>


